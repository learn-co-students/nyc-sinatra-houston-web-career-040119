<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%= @landmark.id %>">
  <input type="hidden" name="_method" value="patch">
  
<p>Name: <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"> </p>

<p>Year completed: <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"> </p>

<p><input type="submit" value="Edit Landmark"></p>

</form>

<a class="button" href="/figures">Landmarks</a>
