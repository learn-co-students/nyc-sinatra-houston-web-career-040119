<form method="POST" action="/figures/<%= @figure.id %>">

  <input type="hidden" name="_method" value="patch">
  
  <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>

<p>Titles: 
</p>
<% @titles.each do |title| %>
<p>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>><%= title.name %></input>
</p>
<% end %>


<p>Create new title:</p>
<p><input type="text" name="title[name]" id="new_title"></p>


<p>Landmarks: 
</p>
<% @landmarks.each do |landmark| %>
<p>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
</p>
<% end %>

<p>Create New Landmark:</p>
<p>
  Name: <input type="text" name="landmark[name]" id="new_landmark"> Year: <input type="text" name="landmark[year_completed]">
</p>


<p><input type="submit" value="Edit Figure"></p>

</form>