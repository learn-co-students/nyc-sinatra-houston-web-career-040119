<h2>Edit Historical Figure</h2>

<!-- add content here -->

<form action="/figures/<%=@figure.id%>" method="post">
<input type="hidden" name="_method" value="patch">
<label for="figure[name]">Name:</label>
<input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>" />
<label for="figure[title_ids]">Titles:</label>
<%@titles.each do |title|%>
<input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%> <%='checked' if @figure.titles.include?(title)%>/>
<%end%>
<input id="new_landmark" type="text" name="landmark[name]" />
<input type="text" name="landmark[year_completed]" />

<input type="submit" value="Edit Figure" />
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
